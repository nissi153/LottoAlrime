<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nissi.lottoalrime.ChooseActivity">

    <Button
        android:id="@+id/buttonChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:onClick="onClickChoose"
        android:text="로또번호 자동선택"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="?attr/colorButtonNormal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonChoose">

        <TextView
            android:id="@+id/textViewNum1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="45"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textViewNum2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="45"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textViewNum3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="45"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textViewNum4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="45"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textViewNum5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="45"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textViewNum6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="45"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewTitleManual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="수동번호 입력"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="?attr/colorButtonNormal"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleManual">

        <EditText
            android:id="@+id/editTextNum1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="2"
            android:gravity="center"
            android:inputType="number"
            android:text="45"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextNum2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="2"
            android:gravity="center"
            android:inputType="number"
            android:text="45"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextNum3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="2"
            android:gravity="center"
            android:inputType="number"
            android:text="45"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextNum4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="2"
            android:gravity="center"
            android:inputType="number"
            android:text="45"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextNum5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="2"
            android:gravity="center"
            android:inputType="number"
            android:text="45"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextNum6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="2"
            android:gravity="center"
            android:inputType="number"
            android:text="45"
            android:textSize="14sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
